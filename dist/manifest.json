{
  "name": "GMail Chattifier",
  "version": "0.0.1",
  "description":
    "Re-formats your GMail conversation into something more readable, like a chat archive",
  "icons": {
    "16": "gmail-chattifier-16.png",
    "48": "gmail-chattifier-48.png",
    "128": "gmail-chattifier-128.png"
  },
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["bundle.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_title": "GMail Chattifier",
    "default_popup": "popup.html",
    "default_icon": "gmail-chattifier-128.png"
  },
  "manifest_version": 2
}
