{
  "name": "GMail Chattifier",
  "version": "0.0.1",
  "description":
    "Re-formats your GMail conversation into something more readable, like a chat archive",
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["bundle.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_title": "GMail Chattifier",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
